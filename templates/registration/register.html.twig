{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <div class="card shadow rounded-4 border-0">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Create Your Account</h2>
                        {{ form_errors(form) }}

                        {{ form_start(form) }}
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.address) }}
                                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.address) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.phoneNumber) }}
                                    {{ form_widget(form.phoneNumber, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.phoneNumber) }}
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3 position-relative">
                                    {{ form_label(form.plainPassword.first) }}
                                    <div class="input-group">
                                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                                        <span class="input-group-text" data-action="hide_show">
                                        <i class="fa-solid fa-eye"></i>
                                    </span>
                                    </div>
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3 position-relative">
                                    {{ form_label(form.plainPassword.second) }}
                                    <div class="input-group">
                                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                                        <span class="input-group-text" data-action="hide_show">
                                        <i class="fa-solid fa-eye"></i>
                                    </span>
                                    </div>
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-check mt-3">
                            {{ form_widget(form.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.agreeTerms) }}
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary rounded-pill py-2 fs-5">Register</button>
                        </div>
                        {{ form_end(form) }}

                        <p class="text-center mt-4 mb-0 text-muted">
                            Already have an account?
                            <a href="{{ path('app_login') }}">Login here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
