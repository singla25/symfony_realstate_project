{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-5">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 alert alert-info">
                        You are logged in as {{ app.user.userIdentifier }},
                        <a href="{{ path('app_logout') }}" class="text-decoration-underline">Logout</a>
                    </div>
                {% endif %}

                <div class="card shadow rounded-4 border-0">
                    <div class="card-body p-4">
                        <h2 class="text-center mb-4">Welcome Back</h2>

                        <form method="post">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email address</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Password</label>
                                <div class="input-group">
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                    <span class="input-group-text" data-action="hide_show">
                                    <i class="fa-solid fa-eye"></i>
                                </span>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember me</label>
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-primary btn-block rounded-pill" type="submit">Sign in</button>
                            </div>
                        </form>

                        <p class="text-center mt-3 mb-0">
                            Don't have an account?
                            <a href="{{ path('app_register') }}">Register here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
